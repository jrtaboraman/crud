 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
  <div class="new_user">
      <div class="form-group">
          <label for="firstname" class="text-light">firtname</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="firstname" value="" placeholder="Francisco">
      </div>
      <div class="form-group">
          <label for="lastname" class="text-light">lastname</label>
          <input type="text" name="lastname" value="" placeholder="tabora">
      </div>
      <div class="form-group">
          <label for="birthday" class="text-light">birthday</label>
          <input type="date" name="birthday" value="" placeholder="MM">
      </div>
      <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
      </div>

  </div>
</form>