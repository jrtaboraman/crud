<form id="add_user" method="POST">
  <div class="new_user">
    <div class="form-group">
      <label for="firstname" class="text-light">First Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="firstname" value="" placeholder="Francisco" />
    </div>
    <div class="form-group">
      <label for="lastname" class="text-light">Last Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="lastname" value="" placeholder="Tabora" />
    </div>
    <div class="form-group">
      <label for="birthday" class="text-light">Birthday</label>
      <input type="date" name="birthday" value="" placeholder="MM" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
