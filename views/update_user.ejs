<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>All users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Use the form below to update an account</span>
    </div>
    <!-- Update user form-->
    <form id="update_user" method="POST">
      <div class="new_user">
        <div class="form-group">
          <label for="firstname" class="text-light">First Name</label>
          <input type="hidden" name="id" value="" />
          <input
            type="text"
            name="firstname"
            value=""
            placeholder="Francisco"
          />
        </div>
        <div class="form-group">
          <label for="lastname" class="text-light">Last Name</label>
          <input type="hidden" name="id" value="" />
          <input type="text" name="lastname" value="" placeholder="Tabora" />
        </div>
        <div class="form-group">
          <label for="birthday" class="text-light">Birthday</label>
          <input type="date" name="birthday" value="" placeholder="MM" />
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>

    <!-- /Update user form-->
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
